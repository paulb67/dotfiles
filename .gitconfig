[user]
    name = Paul Bennett
    email = paulbennett67@hotmail.com
[color]
    status = auto
    branch = auto
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
    default = tracking
[color "diff"]
    whitespace = red reverse
[core]
    editor = vi
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
    up = pull --rebase
    wu = log --stat origin..@{0}
    wup = log -p origin..@{0}
[branch]
    autosetupmerge = true
[push]
    default = current
[help]
    autocorrect = -1
